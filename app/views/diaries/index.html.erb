<div class="diaries-main">
  <div class="diary-contents">
    <div class="diary-form__heading">
      <h2>新規日記投稿</h2>
    </div>
    <div class="diary-form">
      <%= form_with model: @diary, local: true do |form| %>
        <div class="diary-form__content">
          <%= form.text_area :content, placeholder: "今日の日記を書いてね！" %>
        </div>
        <div class="diary-form__submit">
          <%= form.submit "投稿する" %>
        </div>
      <% end %>
    </div>

    <div class="diary-content">
      <div class="diary-content__heading">
        <h1>日記一覧</h1>
      </div>
    
      <% @diaries.each do |diary| %>
        <div class="diary-content">
          <div class="diary-content__text" >
            <%= diary.content %>
          </div>
          <div class="dairy-content__time">
            投稿日: <%= diary.created_at.strftime("%Y-%m-%d %H:%M") %>
          </div>
          <%= link_to "削除", diary_path(diary), method: :delete, class: "diary-destroy" %>
        </div>
      <% end %>
  </div>

  <div class="button-container">
    <div class="end-btn">
      <%= link_to "もどる", root_path, class: "btn-back" %>
    </div>
  </div>
</div>
