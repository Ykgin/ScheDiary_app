<h1>日記一覧</h1>

<ul>
  <% @diaries.each do |diary| %>
    <li>
      <%= diary.content %>
      <p>投稿日: <%= diary.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
    </li>
  <% end %>
</ul>

<h2>新規日記投稿</h2>
<%= form_with model: @diary, local: true do |form| %>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit '投稿する' %>
  </div>
<% end %>
