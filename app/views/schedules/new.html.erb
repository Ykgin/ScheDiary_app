<%= form_with model: @schedule, class: 'schedule-main', local: true do |f| %>
<div class='form-wrap__schedule'>
  <div class='form-header__schedule'>
    <h1 class='form-header-text__schedule'>
      スケジュール登録
    </h1>
  </div>

  <div class="form-group">
    <div class="form-text__schedule">
      <div class="form-tag">タイトル</div>
      <%= f.text_field :title, class:"input-default" %>
    </div>

    <div class="form-text__schedule">
      <div class="form-tag">日時</div>
      <%= raw sprintf(
                f.datetime_select(
                  :start_time,
                  class:'start-time',
                  id:"start-time",
                  use_month_numbers: true,
                  date_separator: '%s',
                  datetime_separator: '%s'),
                  "年", "月", "日") %>
    </div>

    <div class="form-text__schedule">
      <div class="form-tag">内容</div>
      <%= f.text_area :content, class:"input-textarea" %>
    </div>
      
    <div class="submit-btn">
      <%= f.submit "登録", class:"submit-red-btn" %>
    </div>
  </div>
</div>
<% end %>