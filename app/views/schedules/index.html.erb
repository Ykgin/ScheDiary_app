<div class="main">
 <%# ユーザーがログインしていないとカレンダーが表示されない%>
  <% if user_signed_in? %>
    <%= link_to "予定を登録する", new_schedule_path %>

    <%= month_calendar events: @schedules do |date, schedules| %>
      <%= date.day %>
      <% schedules.each do |schedule| %>
        <div>
          <%= schedule.title %>
        </div>
      <% end %>
    <% end %>
    
    <div class="row">
      <div class="col-md-4">
        <div class="schedule">今月の予定</div>
          <% @schedules.each do |schedule| %>
            <%= schedule.title %>
            <%= schedule.start_time.strftime("%m-%d") %>
          <% end %>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-md-4">
        ログインして<%= link_to "はじめる", new_user_session_path, class: :greeting__link %>
      </div>
    </div>
  <% end %>

</div>

