<div class="schedule_main">
  <div class="show-wrap">
    <div class="schedule-show__header">
      <h1>スケジュールの詳細</h1>
    </div>

    <div class="show-main">
      <div class="show-info">
        <div class="show-text">日時</div>
        <div class="default-text">
          <%= simple_format(@schedule.start_time.strftime("%m-%d %H:%M")) %>
        </div>
      </div>

      <div class="show-info">
        <div class="show-text">タイトル</div>
        <div class="default-text">
          <%= simple_format(@schedule.title) %>
        </div>
      </div>

      <div class="show-info">
        <div class="show-text">内容・詳細</div>
        <div class="default-text">
          <%= simple_format(@schedule.content) %>
        </div>
      </div>

      <div class="diaries-headding">日記・記録</div>
      <% if @diaries.present? %>
        <ul>
          <% @diaries.each do |diary| %>
            <li><%= diary.content %></li>
          <% end %>
        </ul>
      <% else %>
        <div>日記・記録はありません。</div>
      <% end %>
    </div>
  </div>
  <div class="button-container">
    <div class="end-btn">
      <%= link_to "もどる", root_path, class: "btn-back" %>
    </div>

    <div class="end-btn">
      <%= link_to "修正", edit_schedule_path(@schedule.id), method: :get, class: "btn-back" %>
    </div>

    <div class="end-btn">
      <%= link_to "削除", schedule_path(@schedule.id), method: :delete, class:"schedule-destroy" %>
    </div>
  </div>
</div>
